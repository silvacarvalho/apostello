# ============================================================
# VARIÁVEIS DE AMBIENTE - Backend
# Sistema de Gestão de Escalas de Pregação - IASD
# ============================================================

# ============================================================
# APLICAÇÃO
# ============================================================
APP_NAME="Sistema de Escalas de Pregação - IASD"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# ============================================================
# BANCO DE DADOS PostgreSQL
# ============================================================
DATABASE_URL=postgresql://apostello_user:senha_segura@localhost:5432/apostello_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=apostello_db
DATABASE_USER=apostello_user
DATABASE_PASSWORD=senha_segura

# Pool de conexões
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============================================================
# SEGURANÇA E AUTENTICAÇÃO
# ============================================================
SECRET_KEY=sua_chave_secreta_muito_segura_aqui_min_32_caracteres
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================
# WHATSAPP BUSINESS API (Twilio)
# ============================================================
TWILIO_ACCOUNT_SID=seu_account_sid_aqui
TWILIO_AUTH_TOKEN=seu_auth_token_aqui
TWILIO_WHATSAPP_NUMBER=whatsapp:+5511999999999

# ============================================================
# SMS (Twilio)
# ============================================================
TWILIO_PHONE_NUMBER=+5511999999999

# ============================================================
# EMAIL (SMTP)
# ============================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASSWORD=sua_senha_app
SMTP_FROM_EMAIL=noreply@apostello.com.br
SMTP_FROM_NAME="Sistema de Escalas - IASD"

# ============================================================
# REDIS (Cache e Celery)
# ============================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============================================================
# CELERY (Tasks assíncronas)
# ============================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================
# UPLOADS E ARQUIVOS
# ============================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.xlsx,.xls,.csv,.pdf,.jpg,.jpeg,.png

# ============================================================
# LOGS
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_ROTATION=500 MB
LOG_RETENTION=10 days

# ============================================================
# NOTIFICAÇÕES
# ============================================================
# Habilitar/desabilitar canais
NOTIFICATIONS_WHATSAPP_ENABLED=True
NOTIFICATIONS_SMS_ENABLED=False
NOTIFICATIONS_PUSH_ENABLED=True
NOTIFICATIONS_EMAIL_ENABLED=True

# Tentativas de reenvio
NOTIFICATIONS_MAX_RETRIES=3
NOTIFICATIONS_RETRY_DELAY_SECONDS=60

# ============================================================
# GERAÇÃO DE ESCALAS
# ============================================================
# Pesos do algoritmo de score
SCORE_WEIGHT_AVALIACOES=0.6
SCORE_WEIGHT_FREQUENCIA=0.25
SCORE_WEIGHT_PONTUALIDADE=0.15

# Penalização por recusa
SCORE_PENALIZACAO_RECUSA=0.15

# ============================================================
# LEMBRETES AUTOMÁTICOS
# ============================================================
LEMBRETE_7_DIAS_HABILITADO=True
LEMBRETE_3_DIAS_HABILITADO=True
LEMBRETE_24H_HABILITADO=True

# ============================================================
# SENTRY (Monitoramento de Erros - Opcional)
# ============================================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================================
# RATE LIMITING
# ============================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================
# BACKUP
# ============================================================
BACKUP_ENABLED=True
BACKUP_DIR=/app/backups
BACKUP_RETENTION_DAYS=30
